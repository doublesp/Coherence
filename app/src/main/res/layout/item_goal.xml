<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="pos"
            type="int" />

        <variable
            name="handler"
            type="com.doublesp.coherence.interfaces.presentation.GoalActionHandlerInterface" />

        <variable
            name="viewModel"
            type="com.doublesp.coherence.viewmodels.Goal" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        tools:background="@color/colorBackground">

        <TextView
            android:id="@+id/tvGoalIndex"
            android:layout_width="@dimen/activity_list_composition_idea_icon_width"
            android:layout_height="@dimen/activity_list_composition_idea_icon_height"
            android:layout_margin="10dp"
            android:background="@drawable/ic_panorama_fish_eye"
            android:backgroundTint="@color/colorText"
            android:gravity="center"
            android:maxLines="1"
            android:text='@{Integer.toString(pos+1)}'
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/colorText"
            tools:text="1" />

        <ImageButton
            android:id="@+id/ivGoalImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_goal_height"
            android:adjustViewBounds="true"
            android:onClick="@{() -> handler.onPreviewButtonClick(pos)}"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/background_3" />

        <Button
            android:id="@+id/tvGoalTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="left"
            android:maxLines="2"
            android:onClick="@{() -> handler.onPreviewButtonClick(pos)}"
            android:padding="20dp"
            android:text='@{viewModel.title}'
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/colorText"
            tools:text="Perperoni Pizza" />

    </LinearLayout>


</layout>