<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="pos"
                type="int"/>

        <variable
                name="handler"
                type="com.doublesp.coherence.interfaces.presentation.GoalActionHandlerInterface"/>

        <variable
                name="viewModel"
                type="com.doublesp.coherence.viewmodels.Goal"/>
    </data>

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/colorBackground">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/tvGoalIndex"
                    android:layout_width="@dimen/activity_list_composition_idea_icon_width"
                    android:layout_height="@dimen/activity_list_composition_idea_icon_height"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text='@{Integer.toString(pos+1)}'
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:background="@drawable/ic_panorama_fish_eye"
                    android:backgroundTint="@color/colorButton"
                    android:textColor="@color/colorButton"
                    tools:text="1"/>

            <TextView
                    android:id="@+id/tvGoalTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:maxLines="1"
                    android:text='@{viewModel.title}'
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:backgroundTint="@color/colorButton"
                    android:textColor="@color/colorButton"
                    tools:text="Perperoni Pizza"/>
        </LinearLayout>


        <ImageButton
                android:id="@+id/ivGoalImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_goal_height"
                android:adjustViewBounds="true"
                android:onClick="@{() -> handler.onPreviewButtonClick(pos)}"
                android:padding="0dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/background_3"/>

    </LinearLayout>
</layout>