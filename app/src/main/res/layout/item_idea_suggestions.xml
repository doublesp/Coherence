<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="pos"
            type="int" />

        <variable
            name="handler"
            type="com.doublesp.coherence.interfaces.presentation.ListFragmentActionHandlerInterface" />

        <variable
            name="viewModel"
            type="com.doublesp.coherence.viewmodels.Idea" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvIdeaSuggestion"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_list_composition_idea_height"
            android:gravity="center"
            android:maxLines="1"
            android:onClick="@{() -> handler.onSuggestionClick(pos)}"
            android:text='@{viewModel.content}'
            android:textColor="@color/colorSecondary" />

    </FrameLayout>
</layout>