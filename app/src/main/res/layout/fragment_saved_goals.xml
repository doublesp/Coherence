<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="com.doublesp.coherence.interfaces.presentation.ListFragmentActionHandlerInterface" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.doublesp.coherence.fragments.SavedGoalsFragment">

        <ImageView
            android:id="@+id/ivSecitonedIdeaCompositionBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.2"
            android:scaleType="centerCrop"
            tools:src="@drawable/background_0" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvSavedGoals"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />

    </FrameLayout>

</layout>