<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context="com.doublesp.coherence.fragments.IdeaReviewFragment">

        <ImageView
            android:id="@+id/ivIdeaBackgroundImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/background_0"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvIdeaSelector"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_idea_review_list_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorWhiteOverlay"/>

    </RelativeLayout>

</layout>