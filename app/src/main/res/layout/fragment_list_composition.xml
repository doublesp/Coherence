<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable name="handler"
            type="com.doublesp.coherence.interfaces.presentation.ListFragmentActionHandlerInterface" />
    </data>

    <FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context="com.doublesp.coherence.fragments.ListCompositionFragment">

        <ImageView android:id="@+id/ivIdeaCompositionBackground" android:layout_width="match_parent"
            android:layout_height="match_parent" android:alpha="0.2" android:scaleType="centerCrop"
            tools:src="@drawable/background_0" />

        <android.support.v7.widget.RecyclerView android:id="@+id/rvIdeas"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:background="@android:color/transparent" />

        <android.support.design.widget.FloatingActionButton android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="bottom|right|end"
            android:layout_margin="16dp"
            android:onClick="@{() -> handler.onFloatingAcitonButtonClick()}"
            android:src="@drawable/ic_share" android:tint="@color/colorButton" app:fabSize="normal"
            app:layout_anchor="@id/rvIdeas" app:layout_anchorGravity="bottom|right|end" />

    </FrameLayout>
</layout>