<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 tools:context="com.doublesp.coherence.fragments.IdeaSearchResultFragment">

        <ImageView
                android:id="@+id/ivIdeaSearchBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.1"
                android:scaleType="centerCrop"
                tools:src="@drawable/background_0"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rvIdeaSearchResults"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"/>

        <EditText
                android:id="@+id/etIdeaSearchBox"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_list_composition_idea_height"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:hint="@string/idea_hint_search"
                android:maxLines="1"
                android:textColor="@color/colorPrimary"/>

    </FrameLayout>
</layout>