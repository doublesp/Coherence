<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <android.support.percent.PercentFrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="vertical"
                 tools:context="com.doublesp.coherence.fragments.SavedIdeasFragment">

        <ImageView
                android:id="@+id/ivIdeaSearchBackground"
                android:layout_width="match_parent"
                app:layout_heightPercent="@fraction/top_image_ratio"
                android:scaleType="centerCrop"
                tools:src="@drawable/background_0"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rvSavedIdeas"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"/>

    </android.support.percent.PercentFrameLayout>
</layout>